# ============================================================
# Vitalis API — Environment Variables
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control.
# ============================================================

# --- App ---
APP_NAME=Vitalis
APP_VERSION=0.1.0
DEBUG=true
LOG_LEVEL=INFO
ENVIRONMENT=development

# --- Supabase ---
# Project URL from Supabase dashboard → Settings → API
SUPABASE_URL=https://your-project-id.supabase.co
# Service role key (server-side only — has full DB access, bypasses RLS)
SUPABASE_SERVICE_ROLE_KEY=eyJ...your-service-role-key
# Direct Postgres connection string (for asyncpg)
# Found in Supabase → Settings → Database → Connection string → URI
SUPABASE_DB_URL=postgresql://postgres.your-project-id:your-password@aws-0-us-east-1.pooler.supabase.com:6543/postgres

# --- Clerk ---
# From Clerk dashboard → API Keys
CLERK_SECRET_KEY=sk_test_...
CLERK_PUBLISHABLE_KEY=pk_test_...
# From Clerk dashboard → Webhooks → Signing Secret
CLERK_WEBHOOK_SECRET=whsec_...
# JWKS endpoint (usually no need to change)
CLERK_JWKS_URL=https://api.clerk.com/v1/jwks

# --- Cloudflare R2 ---
# From Cloudflare dashboard → R2 → Manage R2 API Tokens
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET_NAME=vitalis-files
# Optional: custom domain for public assets
R2_PUBLIC_URL=

# --- Rate Limiting ---
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# --- CORS ---
# Comma-separated list of allowed origins
CORS_ORIGINS=["http://localhost:3000"]
